<%= form_with model: @sale, local: true do |f| %>

  <%= f.label :cod, "Código de la Venta" %>
  <%= f.number_field :cod %>

  <%= f.label :detail, "Detalle" %>
  <%= f.text_area :detail %>

  <%= f.label :category, "Categoría de la Venta" %>
  <%= f.select :category, ['uno', 'dos', 'tres', 'cuatro', 'cinco'] %>

  <%= f.label :value, "Valor" %>
  <%= f.number_field :value %>

  <%= f.label :discount, "Descuento" %>
  <%= f.number_field :discount %>

  <%= f.label :tax, "Marque si es exento de IVA?" %>
  <%= f.check_box :tax %>

  <%= f.submit 'Enviar'  %>
<% end %>
